{{- range .Values.segments }}
{{- if $.Values.services.dns.enabled }}
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: zones-{{ .name }}-pvc
  namespace: {{ $.Values.global.namespace }}
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: {{ $.Values.global.storage.className }}
  resources:
    requests:
      storage: {{ $.Values.zoneStorage.size }}
{{- end }}
{{- if $.Values.services.dhcp.enabled }}
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: kea-leases-{{ .name }}-pvc
  namespace: {{ $.Values.global.namespace }}
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: {{ $.Values.global.storage.className }}
  resources:
    requests:
      storage: 100Mi
{{- end }}
{{- end }}
